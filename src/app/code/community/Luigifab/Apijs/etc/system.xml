<config>
	<tabs>
		<luigifab translate="label">
			<label>Tools</label>
			<sort_order>103</sort_order>
		</luigifab>
	</tabs>
	<sections>
		<apijs translate="label">
			<label>Dialogs boxes</label>
			<tab>luigifab</tab>
			<sort_order>51</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<help>
					<frontend_model>apijs/adminhtml_config_help</frontend_model>
					<sort_order>0</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
				</help>
				<general translate="label">
					<label>General</label>
					<sort_order>1</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<demo>
							<frontend_model>apijs/adminhtml_demo</frontend_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</demo>
						<backend translate="label">
							<label>Enable in backend</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</backend>
						<frontend translate="label">
							<label>Enable in frontend</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</frontend>
						<python translate="label comment">
							<label>Use python-pil and python-scour as image processor</label>
							<comment><![CDATA[Used even if the apijs is disabled. If yes, image generation will be multi-threaded. <strong>Warning,</strong> if you have added svg and webp images, if you want to disable this feature, you must first remove them.]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>4</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</python>
						<browser translate="label comment">
							<label>Check browser version</label>
							<comment>Firefox 36+, Chrome 32+, Opera 19+, Edge 16+, Safari 9+ (checks even if the apijs is disabled).</comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</browser>
						<remove_cache translate="label comment">
							<label>Remove cached images</label>
							<comment><![CDATA[When removing a <strong>product image</strong> or a <strong>product</strong>, a <strong>category image</strong> or a <strong>category</strong>, a <strong>wysiwyg image</strong> (remove even if the apijs is disabled).]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>6</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</remove_cache>
						<remove_store_id translate="label comment">
							<label>Remove store view id</label>
							<comment><![CDATA[For <strong>catalog/product/cache</strong> directory (remove even if the apijs is disabled).]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>7</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</remove_store_id>
						<use_link translate="label comment">
							<label>Use links instead of full paths</label>
							<comment><![CDATA[For example <b>media/cpci</b> for <b>media/catalog/product/cache/image</b> (used even if the apijs is disabled). Links are automatically created.]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>8</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</use_link>
						<options translate="label">
							<label>Options</label>
							<frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</options>
						<show_gallery_tab translate="label comment">
							<label>Automatically display the gallery tab</label>
							<comment>When displaying the modification page of a product in the backend.</comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>11</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</show_gallery_tab>
						<sort_by_store translate="label comment">
							<label>Sort images by store views</label>
							<comment>Based on sort order, 1xx for view 1, 2xx for view 2, 10xx for view 10... Only for display in backend.</comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>12</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</sort_by_store>
					</fields>
				</general>
				<gallery translate="label">
					<label>Photo gallery</label>
					<sort_order>2</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<enabled translate="label">
							<label>Enable</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</enabled>
						<hoverload translate="label">
							<label>Update on hover</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</hoverload>
						<picture translate="label">
							<label>Main picture</label>
							<frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</picture>
						<picture_width translate="label">
							<label>Width</label>
							<validate>required-entry validate-greater-than-zero</validate>
							<sort_order>11</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</picture_width>
						<picture_height translate="label">
							<label>Height</label>
							<validate>required-entry validate-greater-than-zero</validate>
							<sort_order>12</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</picture_height>
						<thumbnail translate="label">
							<label>Thumbnails</label>
							<frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</thumbnail>
						<thumbnail_width translate="label">
							<label>Width</label>
							<validate>required-entry validate-greater-than-zero</validate>
							<sort_order>21</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</thumbnail_width>
						<thumbnail_height translate="label">
							<label>Height</label>
							<validate>required-entry validate-greater-than-zero</validate>
							<sort_order>22</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</thumbnail_height>
					</fields>
				</gallery>
			</groups>
		</apijs>
	</sections>
</config>