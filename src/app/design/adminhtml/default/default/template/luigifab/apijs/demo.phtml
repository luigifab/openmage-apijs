// wysiwyg
$wysiwygDir      = $helper->getWysiwygImageDir();
$wysiwygCacheDir = $helper->getWysiwygImageDir(true);

if (is_dir($wysiwygCacheDir)) {

	exec('du -hs '.escapeshellarg($wysiwygCacheDir).' | cut -f1', $wysiwygCacheSize);
	$wysiwygCacheSize = trim(implode($wysiwygCacheSize));

	// 1G - 500M - 5M - 1.2M - 225K
	$size = (float) $wysiwygCacheSize;
	$size = $helper->getNumber($size, ['precision' => 2]);
	if (stripos($wysiwygCacheSize, 'G') !== false)
		$wysiwygCacheSize = $this->__('%s GB', $size);
	else if (stripos($wysiwygCacheSize, 'M') !== false)
		$wysiwygCacheSize = $this->__('%s MB', $size);
	else if (stripos($wysiwygCacheSize, 'K') !== false)
		$wysiwygCacheSize = $this->__('%s kB', (int) $size);
	$wysiwygCacheSize = preg_replace('#[.,]00[[:>:]]#', '', $wysiwygCacheSize);
}
else {
	$wysiwygCacheSize = 0;
}

