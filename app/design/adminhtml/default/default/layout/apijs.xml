<layout version="0.1.0">
	<default>
		<reference name="head">
			<action method="addItem" ifconfig="apijs/general/enabled">
				<type>skin_css</type><name>css/apijs/dialogue.min.css</name><params>media="screen, projection"</params>
			</action>
			<action method="addItem" ifconfig="apijs/general/enabled">
				<type>skin_css</type><name>css/apijs/fix.css</name><params>media="screen, projection"</params>
			</action>
			<action method="addItem" ifconfig="apijs/general/enabled">
				<type>skin_css</type><name>css/apijs/ie8.css</name><params>media="screen, projection"</params><if>IE 8</if>
			</action>
			<action method="addItem" ifconfig="apijs/general/enabled">
				<type>skin_js</type><name>js/apijs.min.js</name>
			</action>
		</reference>
	</default>
</layout>