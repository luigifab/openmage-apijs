<layout version="0.1.0">
	<default>
		<reference name="head">
			<action method="addItem" ifconfig="apijs/general/backend">
				<type>skin_css</type>
				<name>css/luigifab/apijs/app.min.css</name>
				<params>media="screen, projection"</params>
			</action>
			<action method="addItem" ifconfig="apijs/general/backend">
				<type>skin_css</type>
				<name>css/luigifab/apijs/app-ie8.min.css</name>
				<params>media="screen, projection"</params>
				<if>IE 8</if>
			</action>
			<action method="addItem" ifconfig="apijs/general/backend">
				<type>skin_css</type>
				<name>css/luigifab/apijs/styles.css</name>
				<params>media="screen, projection"</params>
			</action>
			<action method="addItem" ifconfig="apijs/general/backend">
				<type>skin_js</type>
				<name>js/luigifab/apijs/app.min.js</name>
			</action>
		</reference>
	</default>
</layout>