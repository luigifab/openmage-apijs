<config>
	<modules>
		<Luigifab_Apijs>
			<version>2.5.0</version>
		</Luigifab_Apijs>
	</modules>

	<global>
		<blocks>
			<apijs>
				<class>Luigifab_Apijs_Block</class>
			</apijs>
		</blocks>
		<helpers>
			<apijs>
				<class>Luigifab_Apijs_Helper</class>
			</apijs>
		</helpers>
	</global>

	<adminhtml>
		<layout>
			<updates>
				<apijs>
					<file>apijs.xml</file>
				</apijs>
			</updates>
		</layout>
		<translate>
			<modules>
				<Luigifab_Apijs>
					<files>
						<default>Luigifab_Apijs.csv</default>
					</files>
				</Luigifab_Apijs>
			</modules>
		</translate>
		<acl>
			<resources><admin><children><system><children><config><children>
				<apijs translate="title"><title>Dialogs (apijs)</title></apijs>
			</children></config></children></system></children></admin></resources>
		</acl>
	</adminhtml>
</config>