<config>
	<modules>
		<Luigifab_Apijs>
			<version>2.7.0</version>
		</Luigifab_Apijs>
	</modules>
	<global>
		<blocks>
			<apijs>
				<class>Luigifab_Apijs_Block</class>
			</apijs>
		</blocks>
		<helpers>
			<apijs>
				<class>Luigifab_Apijs_Helper</class>
			</apijs>
		</helpers>
	</global>
	<frontend>
		<layout>
			<updates>
				<apijs>
					<file>luigifab/apijs.xml</file>
				</apijs>
			</updates>
		</layout>
		<translate>
			<modules>
				<Luigifab_Apijs>
					<files>
						<default>Luigifab_Apijs.csv</default>
					</files>
				</Luigifab_Apijs>
			</modules>
		</translate>
	</frontend>
	<adminhtml>
		<layout>
			<updates>
				<apijs>
					<file>luigifab/apijs.xml</file>
				</apijs>
			</updates>
		</layout>
		<translate>
			<modules>
				<Luigifab_Apijs>
					<files>
						<default>Luigifab_Apijs.csv</default>
					</files>
				</Luigifab_Apijs>
			</modules>
		</translate>
	</adminhtml>
</config>