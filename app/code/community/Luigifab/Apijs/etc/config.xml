<config>
	<modules>
		<Luigifab_Apijs>
			<version>5.3.0</version>
		</Luigifab_Apijs>
	</modules>
	<global>
		<blocks>
			<apijs>
				<class>Luigifab_Apijs_Block</class>
			</apijs>
			<adminhtml>
				<rewrite>
					<system_config_form_field_image>Luigifab_Apijs_Block_Adminhtml_Rewrite_Field</system_config_form_field_image>
					<cms_wysiwyg_images_content_uploader>Luigifab_Apijs_Block_Adminhtml_Rewrite_Uploader</cms_wysiwyg_images_content_uploader>
					<catalog_product_helper_form_gallery_content>Luigifab_Apijs_Block_Adminhtml_Rewrite_Gallery</catalog_product_helper_form_gallery_content>
				</rewrite>
			</adminhtml>
			<catalog>
				<rewrite>
					<product_view_media>Luigifab_Apijs_Block_Rewrite_Media</product_view_media>
				</rewrite>
			</catalog>
		</blocks>
		<helpers>
			<apijs>
				<class>Luigifab_Apijs_Helper</class>
			</apijs>
		</helpers>
		<models>
			<apijs>
				<class>Luigifab_Apijs_Model</class>
			</apijs>
		</models>
	</global>
	<admin>
		<routers>
			<adminhtml>
				<args>
					<modules>
						<luigifab_apijs before="Mage_Adminhtml">Luigifab_Apijs</luigifab_apijs>
					</modules>
				</args>
			</adminhtml>
		</routers>
	</admin>
	<frontend>
		<layout>
			<updates>
				<apijs>
					<file>luigifab/apijs.xml</file>
				</apijs>
			</updates>
		</layout>
		<translate>
			<modules>
				<Luigifab_Apijs>
					<files>
						<default>Luigifab_Apijs.csv</default>
					</files>
				</Luigifab_Apijs>
			</modules>
		</translate>
	</frontend>
	<adminhtml>
		<events>
			<catalog_product_delete_after_done>
				<observers>
					<apijs_delete>
						<class>apijs/observer</class>
						<method>deleteProductFiles</method>
					</apijs_delete>
				</observers>
			</catalog_product_delete_after_done>
		</events>
		<layout>
			<updates>
				<apijs>
					<file>luigifab/apijs.xml</file>
				</apijs>
			</updates>
		</layout>
		<translate>
			<modules>
				<Luigifab_Apijs>
					<files>
						<default>Luigifab_Apijs.csv</default>
					</files>
				</Luigifab_Apijs>
			</modules>
		</translate>
	</adminhtml>
	<default>
		<apijs>
			<general>
				<delete_cache>1</delete_cache>
				<browser>1</browser>
			</general>
			<gallery>
				<picture_width>280</picture_width>
				<picture_height>210</picture_height>
				<thumbnail_width>64</thumbnail_width>
				<thumbnail_height>48</thumbnail_height>
			</gallery>
		</apijs>
	</default>
</config>